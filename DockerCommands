# buld the docker
docker build -t fapi-lr:v1 .

#run the docker
docker run -p 80:80 fapi-lr:v1

# tag the build to push into dockerhub
docker tag fapi-lr:v1 zmzia/fapi-lr:v1

#push to the dockerhub
docker push zmzia/fapi-lr:v1

